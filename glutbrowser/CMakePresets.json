{
  "version": 2,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "displayName": "${presetName} - ${generator}",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}"
    },
    {
      "name": "win-msvc",
      "inherits": "default",
      "generator": "Visual Studio 17 2022"
    },
    {
      "name": "win-msvc-debug",
      "inherits": "win-msvc",
	  "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default"
    },
	{
	  "name": "win-msvc-debug",
	  "configurePreset": "win-msvc-debug"
	}
  ]
}